@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<div id="@editorId" class="quill-editor"></div>

@code {
    private string editorId = $"quill-{Guid.NewGuid():N}";
    private DotNetObjectReference<RichTextEditor>? dotNetRef;
    private bool isInitialized = false;

    [Parameter]
    public EventCallback<string> OnContentChanged { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            dotNetRef = DotNetObjectReference.Create(this);
            try
            {
                isInitialized = await JSRuntime.InvokeAsync<bool>("initQuill", editorId, dotNetRef);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error initializing Quill: {ex.Message}");
            }
        }
    }

    [JSInvokable]
    public async Task HandleContentChange(string html)
    {
        await OnContentChanged.InvokeAsync(html);
    }

    public async Task<string> GetHTML()
    {
        if (!isInitialized) return string.Empty;
        
        try
        {
            return await JSRuntime.InvokeAsync<string>("getQuillContent", editorId);
        }
        catch
        {
            return string.Empty;
        }
    }

    public async Task LoadHTMLContent(string html)
    {
        if (!isInitialized)
        {
            await Task.Delay(100);
        }

        try
        {
            await JSRuntime.InvokeVoidAsync("setQuillContent", editorId, html ?? string.Empty);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading content: {ex.Message}");
        }
    }

    public async Task Clear()
    {
        if (!isInitialized) return;
        
        try
        {
            await JSRuntime.InvokeVoidAsync("clearQuill", editorId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error clearing editor: {ex.Message}");
        }
    }

    public async ValueTask DisposeAsync()
    {
        dotNetRef?.Dispose();
        
        if (isInitialized)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("eval", $"delete window.quillEditors['{editorId}']");
            }
            catch { }
        }
    }
}